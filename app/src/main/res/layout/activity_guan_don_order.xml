<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GuanDonOrderActivity" android:id="@+id/layout"
        android:background="@android:color/background_light">

    <Button
            android:id="@+id/orderButton"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/button_outline_round"
            android:onClick="sendGuanDonOrder"
            android:text="@string/confirmOrder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guandonOrderList" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/guandonOrderList"
            android:layout_width="380dp"
            android:layout_height="300dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="8dp"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="32dp"
            android:text="您的訂單如下："
            android:textColor="@color/pureBlack"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/guandonOrderList"
            app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>