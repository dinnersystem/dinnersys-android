<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".RemLoginActivity">

    <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="60dp"
            android:text="板 橋 高 中 點 餐 系 統"
            android:textColor="@color/pureBlack"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/remButton"
            android:layout_width="247dp"
            android:layout_height="50dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="251dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/button_outline"
            android:foregroundGravity="center"
            android:gravity="center"
            android:onClick="remLogin"
            app:layout_constraintBottom_toTopOf="@+id/fallbackButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <Button
            android:id="@+id/fallbackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="72dp"
            android:background="#00FFFFFF"
            android:onClick="fallbackClick"
            android:text="不是你本人？"
            android:textColor="@color/buttonBlue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/remButton" />
</androidx.constraintlayout.widget.ConstraintLayout>