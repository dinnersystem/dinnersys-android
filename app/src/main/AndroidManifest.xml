<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="seanpai.dinnersystem">

    <uses-permission android:name="android.permission.INTERNET" />



    <application
            android:name=".DinnerSystem"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="GoogleAppIndexingWarning">
        <service android:name=".FCMService"
                android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".MainBarcodeActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>
        <activity android:name=".MainHistoryActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>
        <activity android:name=".GuanDonOrderActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>
        <activity android:name=".GuandonOrderListActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>
        <activity android:name=".DeveloperBonusActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>
        <activity android:name=".DeveloperNormalActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>
        <activity android:name=".ChangePasswordActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>
        <activity android:name=".MainMoreActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>
        <activity android:name=".MainOrderActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>
        <activity android:name=".MainMenuActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".LoginActivity"
                android:label="@string/chinese_name"
                android:configChanges="orientation"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".StudentMainActivity"
                android:label="@string/title_activity_student_main"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".StuOrderListActivity"
                android:label="@string/stu_title_order"
                android:configChanges="orientation"
                android:screenOrientation="portrait"/>
        <meta-data
                android:name="com.google.firebase.messaging.default_notification_channel_id"
                android:value="@string/default_notification_channel_id" />
        <meta-data
                android:name="com.google.firebase.messaging.default_notification_icon"
                android:resource="@drawable/dinnersys_icon_grey_transp" />
    </application>

</manifest>